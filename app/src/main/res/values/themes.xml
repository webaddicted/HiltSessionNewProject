    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_secondary</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppSwitch" parent="AppTheme">
        <item name="colorControlActivated">@color/appOrange</item>
        <item name="android:fontFamily">@font/ufonts_com_klavika_bold_opentype</item>
    </style>

    <style name="C360TabLayoutTheme" parent="@style/AppTheme">
        <item name="android:singleLine">false</item>
        <item name="fontFamily">@font/ufonts_com_klavika_regular_opentype</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ufonts_com_klavika_regular_opentype</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="ToolBarTheme.ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/appOrange</item>
        <item name="android:textColor">@color/appOrange</item>
        <item name="android:textColorPrimaryInverse">@color/appOrange</item>
    </style>

    <style name="AlertDialogStyle" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/appBlue</item>
        <item name="android:colorAccent">@color/appBlue</item>
        <item name="android:textColorPrimary">@color/appBlue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogSlideUpAnimation</item>-->
    </style>

    <style name="TimePicker" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/appBlue</item>
        <item name="colorControlNormal">@color/appBlue</item>
        <item name="tint">@color/appBlue</item>
        <item name="android:colorAccent">@color/appBlue</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/appBlue</item>
        <item name="android:textColor">@color/appBlue</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/transparent_orange</item>
        <item name="colorSwitchThumbNormal">@color/charcoal_grey</item>
        <item name="fontFamily">@font/ufonts_com_klavika_regular_opentype</item>
    </style>
</resources>